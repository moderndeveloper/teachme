#!/usr/bin/env bash
echo "This is the pwd command."

# The command's name
echo -e 'pwd'

# the command's description
echo "description here"

echo "------------"

# the command's syntax
echo "Syntax:"
echo "pwd [-L] [-P]"
echo -e "\-L: $PWD is the environment variable definition of the current working directory. When the -L option is used, this $PWD definition is printed to the screen."
echo -e "\-P: This option displays ALL the links to the present directory location. For example if we have a directory /home/projects but its full link is 
/var/www/root/projects then when we use the `-P` flag, the full link will be displayed to the screen."

#   ...      etc

echo "------------"

# the command's usage examples
# example 1
echo "test"
echo description here

# example 2
echo "test something"
echo description here


exit 0
