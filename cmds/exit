#!/usr/bin/env bash
echo "This is the exit command."

# The command's name
echo -e 'exit'

# the command's description
echo "The exit command causes the termination of a process. If the exit command is used at the shell prompt, the shell will be closed. It can also be used in bash scripts to end the currently running process and return an error code."

echo "------------"

# the command's syntax
echo "Syntax:"
echo "exit"
echo -e "exit: exits the shell"
#   ...      etc

echo "------------"

# the command's usage examples
# example 1
echo "exit"
echo "exit all processes and quit terminal"

# example 2
echo "exit 0"
echo "specifies the exit code to 0; commonly used after a conditional statement"


exit 0
