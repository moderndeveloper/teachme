#!/usr/bin/env bash
echo -e rmdir
echo rmdir is a command which will remove an empty directory. If the directory is not empty, this command will not work. If together with -p flag, rmdir command can remove the parent directory if it is empty.
echo --------

# the command's syntax
echo -e "\nCOMMAND SYNTAX:"
echo -e "\n\trmdir [option] directory_names"
echo -e "\t\t-p: removes directories and parent directories that become empty as a result. \n\t\tThis command is useful for removing subdirectory trees."


echo -e "\n------------"
