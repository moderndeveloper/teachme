#!/usr/bin/env bash

bold="\033[1m"
underline="\033[4m"
normal="\033[0m"

#command name
echo -e "\n${bold}COMMAND NAME:${normal}"
echo -e "\n\t${bold}clear${normal}"
echo -e "\n------"

#command des
echo -e "\n${bold}COMMAND DESCRIPTION:${normal}"
echo "\nclear command will clear current terminal screen.But the former commands and results are still there, they are just moved upwards."

# the command's syntax
echo -e "\nCOMMAND SYNTAX:"
echo -e "\n\tclear"
echo -e "\t\tclear command accepts neither options nor arguments, and if specified ignores them"

echo -e "\n------------"
