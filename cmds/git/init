#!/usr/bin/env bash
echo "This is the git init command."

# The command's name
echo -e 'git init'

# the command's description
echo "This command creates an empty Git repository. This means that it creates a new folder in your directory name '.git' and addes all the files and subfolders needed to begin tracking any changes that were made. 
This command can also be used to to move an existing repository to another location."

echo "------------"

# the command's syntax
echo "Syntax:"
echo "$ git init --flag <directory>"
echo -e "\tgit init --bare my-project.git: Create a bare my-project.git repository"
echo -e "\tgit init: Create a path/.git directory"
#   ...      etc

echo "------------"

# the command's usage examples
# example 1
echo "git init"
echo "Initializes a new Git repository in your current working directory."

# example 2
echo "git init -q"
echo "Initializes a new Git repository in your current working directory. Only outputs error and warning messages; ignores all other output."


exit 0
