#!/usr/bin/env bash
echo "This is the git log command."

# The command's name
echo -e 'git log'

# the command's description
echo "The git log command outputs the commit history of a branch. It contains every single commit that was made on the branch and contains commit references that can be used to revert commits."

echo "------------"

# the command's syntax
echo "Syntax:"
echo "git log --no-merges -n <NUMBER>"
echo -e "\t--no-merges: shows the history of changes excluding any merges that occured."
echo -e "\t-n <NUMBER>: only shows the most recent number of changes specified by <NUMBER>."
#   ...      etc

echo "------------"

# the command's usage examples
# example 1
echo "git log --all"
echo "commit c8183c1d00f5b413c884b80d9aecfc07815a643d"
echo "Author: tester <tester@gmail.com>"
echo "Date:   Thu Feb 11 14:13:11 2016 -0500"
echo "   update 1"
echo "Display all commits"

# example 2
echo "git log --after "2015-02-01" --before "2015-03-02""
echo "Filter commits by the date range"


exit 0
