#!/usr/bin/env bash

# The command's name
echo -e 'ls'

# the command's description
echo "The ls command lists the contents of the specified argument, either a folder or file. If no argument is given the contents of the present working directory are shown."

echo "------------"

# the command's syntax
echo "Syntax:"
echo "ls [option] [directory]"
echo -e "\t[option] - A command option or command flag."
echo -e "\t[option: -l] - Lists files in a long listing format, displaying permissions along with other information."
echo -e "\t[option: -a] - Lists all hidden files in the specified directory."
echo -e "\t[option: -t] - Sorts listing by modification time."
echo -e "\t[directory] - The directory filepath you wish to list, by default it is the current directory."

echo "------------"

# the command's usage examples
# example 1
echo "ls ~"
echo "Lists the content of the HOME directory."

# example 2
echo "ls -1"
echo "Lists everything in the current working directory in a vertical list."

# example 3
echo "ls -l"
echo "Lists everything in the current working directory in the long format. i.e. showing read/write permissions of a file, last modified time of a file, file size of a file and more."

# example 4
echo "ls -lt"
echo "Lists everything in the current working directory in the long format and also sort the output according to the last modification time."

# example 5
echo "ls -a"
echo "List all hidden files in the current working directory. Hidden files are usually suffix with a dot (.) in Unix systems."

# example 5
echo "ls -R"
echo "Recursively lists all files in the current working directory."

# example 6
echo "ls -d */"
echo "Lists directory entries only in the current working directory."

# example 7
echo "ls ../../"
echo "Lists everything two levels above the current working directory."
exit 0
